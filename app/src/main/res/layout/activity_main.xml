<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/drug_name_label"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drug_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/drug_name_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/drug_name_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/half_life_label"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/half_life_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drug_name_spinner" />

    <EditText
        android:id="@+id/drug_half_life_edittext"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@id/half_life_label"
        app:layout_constraintEnd_toStartOf="@id/halflife_unit"
        app:layout_constraintStart_toEndOf="@id/half_life_label" />

    <Spinner
        android:id="@+id/halflife_unit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/dosage_radio_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/drug_half_life_edittext"
        app:layout_constraintTop_toBottomOf="@id/drug_name_spinner" />

    <RadioGroup
        android:id="@+id/dosage_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/drug_half_life_edittext">

        <RadioButton
            android:id="@+id/single_dose_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/single_dose" />

        <RadioButton
            android:id="@+id/repeated_dose_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeated_dose" />

    </RadioGroup>

    <TextView
        android:id="@+id/dosage_label_textview"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dosage_textview_label"
        app:layout_constraintBottom_toTopOf="@id/every_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dosage_radio_group" />

    <EditText
        android:id="@+id/dosage_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="@string/init_dosage"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@id/dosage_label_textview"
        app:layout_constraintEnd_toStartOf="@id/dosage_unit_spinner"
        app:layout_constraintStart_toEndOf="@id/dosage_label_textview" />

    <Spinner
        android:id="@+id/dosage_unit_spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dosage_edittext"
        app:layout_constraintTop_toBottomOf="@id/dosage_radio_group" />

    <TextView
        android:id="@+id/every_label"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/every_label"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/custom_halflife_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dosage_label_textview"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/frequency_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/every_label"
        app:layout_constraintEnd_toStartOf="@id/frequency_unit_label"
        app:layout_constraintStart_toEndOf="@id/every_label"
        tools:text="120"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/frequency_unit_label"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/frequency_edit_text"
        app:layout_constraintStart_toEndOf="@id/frequency_edit_text"
        tools:text="mins"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/custom_halflife_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/every_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_drug_textview_label"
        app:layout_constraintBaseline_toBaselineOf="@id/custom_halflife_checkbox"
        app:layout_constraintStart_toEndOf="@id/custom_halflife_checkbox" />


    <Button
        android:id="@+id/simulate_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="graph_timeline"
        android:text="@string/graph"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>